import random

# Have user choose rock, paper, scissor and code assigns random to computer.
user = input("Please choose 'r' for Rock, 'p' for Paper, or 's' for Scissors: ")
computer = random.choice(["r", "p", "s"])

# Prints what each chose (eventually I want to have a second list so that it prints the full word)
print(f"You chose {user}. Computer has chosen {computer}")

# Tells the code when the user will win
def is_win(player, opponent):
    if (player == "r" and opponent == "s") or (player == "p" and opponent == "r") \
        or (player == "s" and opponent == "p"):
        return True

# If it is a tie
if user == computer:
    print("You Tied!")

# If the user wins
elif is_win(user, computer):
    print("You Won! :D")

# If the computer wins
else:
    print("You lost! D:")
